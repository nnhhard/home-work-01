<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id='resourceReader' class="ru.iashinme.service.ResourceReaderServiceImpl">
        <constructor-arg name="resourceName" value="answer-question.csv"/>
    </bean>

    <bean id='csvReader' class="ru.iashinme.service.CsvReaderServiceImpl"/>

    <bean id='answerQuestionService' class="ru.iashinme.service.AnswerQuestionServiceImpl">
        <constructor-arg name="resourceReader" ref="resourceReader"/>
        <constructor-arg name="csvReaderService" ref="csvReader"/>
    </bean>

</beans>
